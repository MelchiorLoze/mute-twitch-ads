{
  "manifest_version": 3,
  "name": "Mute Twitch Ads",
  "description": "Automatically mute Twitch ads",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon256.png",
    "512": "icon512.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png",
      "256": "icon256.png",
      "512": "icon512.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [],
  "host_permissions": ["<all_urls>"]
}
