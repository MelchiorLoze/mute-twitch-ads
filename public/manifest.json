{
  "manifest_version": 3,
  "name": "Mute Twitch Ads",
  "description": "Automatically mute Twitch ads",
  "version": "1.0",
  "action": {
    "default_icon": {
      "512": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [],
  "host_permissions": ["<all_urls>"]
}
