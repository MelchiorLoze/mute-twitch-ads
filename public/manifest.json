{
  "manifest_version": 3,
  "name": "Mute Twitch Ads",
  "description": "Automatically mute Twitch ads",
  "version": "1.2",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon256.png",
    "512": "icon512.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.twitch.tv/*"],
      "js": ["js/content_script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "js/service_worker.js"
  },
  "permissions": [],
  "host_permissions": ["*://www.twitch.tv/*"]
}
